{{ define "add" }}
{{ template "header" }}

<div class="card">
    <div class="card-header">  Employees </div>
    <div class="card-body">
        <form method="post" action="/insertar">

            <div class="form-group">
                <label for="Nombre:"></label>
                <input type="text" class="form-control" name="user" id="user" aria-describedby="helpId" placeholder="">
                <small id="helpId" class="form-text text-muted">Your name</small>
            </div> 
            <div class="form-group">
                <label for="Correo:"></label>
                <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelpId" placeholder="">
                <small id="emailHelpId" class="form-text text-muted">Your Email</small>
            </div> 
            
            <button type="submit" class="btn btn-success">Add new employee</button>

            <a name="" id="" class="btn btn-primary" href="/" role="button">Cancel</a>
        </form>
    </div>


</div>



{{ template "footer" }}
{{ end }}